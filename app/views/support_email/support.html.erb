<div class="container farsi mr-3 mt-6">
  <h5 class="display-6 mb-6 "> <%= t("support.desc").html_safe %></h5>
  <% if current_user %>
    <h5 class="display-6 mb-3 "> <%= t("support.form").html_safe %></h5>
    
      <div class="row pt-6">
        <div class="col col-6 offset-4">
          <div class="card">
              <div class="card-header background">  
                <h4 class="mt-2"><%= t("support.request") %></h4>
              </div>
                <div class="card-body background">
                <%= form_for(:support_email, url: support_email_path) do |f| %>

                <%= f.label t("support.field"), class: "form-label" %>
                <%= f.select :role, options_for_select([t("support.technical"), t("support.education"), t("support.finance"), t("support.extend")]),{} ,{class: "form-control"} %>
                  <br>
                  <%= f.label t("support.field"), class: "form-label" %>
                  <%= f.text_field :field, class: "form-control" ,:required => true%>
                  <br>
                  <%= f.label t("support.reason"), class: "form-label" %>
                  <%= f.text_area :desc, class: "form-control", :required => true %>
                  <br>
                  <%= hidden_field_tag 'email', current_user.email  %>
                  <br>
                  <%= f.submit t("forgot_password.submit"), class: "btn btn-primary" %>
                <% end %>
              </div>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <h5 class="display-6 mb-6 "> <%= t("support.login").html_safe %></h5>
  <% end %> 
</div>  
