          <%= t('support.user')%> : <%=  @user[:name]%>
        </p>

        <p>
          <%= t('support.email')%> : <%=  @user[:email]%>
        </p>

        <p>
          <%= t('support.role')%> : <%=  @role%>
        </p>

        <p>
          <%= t('support.field')%> : <%=  @field%>
        </p>

        <p>
          <%= t('support.reason')%> : <%=  @desc%>
        </p>
      </div>

    </div>
  </div>
